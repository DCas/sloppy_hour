<h1><%= @venue.name %></h1>

<p><%= @venue.address %><p>

<hr>
<%= button_to 'Add New Deal', new_deal_path(:venue_id => @venue.id), class: "btn btn-primary pull-right", method: "get" %>
<h3>Deals</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Schedule</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @venue.deals.each do |deal| %>
    <tr>
      <td><%= link_to deal.title, deal %></td>
      <td><%= deal.description %></td>
      <td><%= deal.schedule.to_s %></td>
      <td><%= link_to "Edit", edit_deal_path(deal) unless !user_signed_in? %>
      <td><%= link_to "Destroy", deal, method: :delete, data: { confirm: 'Are you sure?' } unless !user_signed_in? %>
    </tr>
    <% end %>
  </tbody>
</table>