<%= form_for :filter, method: :get, url: deals_path do |form| %>
  <div class="form-group">
    <div class="input-group">
      <%= form.text_field :date, class: 'form-control' %>
      <span class="input-group-btn">
        <%= form.submit 'Search', class: 'btn btn-default' %>
      </span>
    </div>
  </div>
<% end %>